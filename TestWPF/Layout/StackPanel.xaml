<Window x:Class="TestWPF.Layout.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StackPanel" Height="300" Width="300">
    <Grid>
        <GroupBox Header="请选择没有错别字的XX" Margin="5" BorderBrush="Black">
            <StackPanel Margin="5">
                <CheckBox Content="A.哈哈"></CheckBox>
                <CheckBox Content="B.呵呵"></CheckBox>
                <CheckBox Content="C.嘻嘻"></CheckBox>
                <CheckBox Content="D.嘿嘿"></CheckBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="清除" Width="60px" Margin="5"></Button>
                    <Button Content="提交" Width="60px" Margin="5"></Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
